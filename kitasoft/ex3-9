/*int 型の変数 x に数値を入力し、
x を 1 乗、2 乗、3 乗した結果を表示するプログラムを作成しなさい。*/

#include <stdio.h>
#include <math.h>

int main() {
	double x;
	printf("xの値を入力してください。\n");
	scanf_s("%lf",&x);


	printf("x=%f\n",x);
	double ans = pow(x, 1.0);
	printf("x^1は%f\n", ans );
	ans = pow(x, 2.0);
	printf("x^2は%f\n", ans);
	ans = pow(x, 3.0);
	printf("x^3は%f\n", ans);

	return 0;
}
